# =============================================================================
# Device Simulator - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in the actual values
# NEVER commit the .env file with real secrets to version control

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Flask Secret Key (REQUIRED)
# Used for session management and CSRF protection
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_flask_secret_key_minimum_32_characters_long

# Database Configuration (REQUIRED)
# Supported formats: sqlite:///path/to/db.db, postgresql://user:pass@host:port/db, mysql://user:pass@host:port/db
DATABASE_URL=sqlite:///data/devsim.db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption Key for Credential Storage (RECOMMENDED)
# Base64 encoded Fernet key for encrypting sensitive data
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_base64_fernet_encryption_key_44_characters

# Encryption Key Version (for key rotation support)
ENCRYPTION_KEY_VERSION=1

# JWT Secret Key (REQUIRED if authentication enabled)
# Used for signing JWT tokens
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters_long

# =============================================================================
# AUTHENTICATION SYSTEM
# =============================================================================

# Enable/Disable Authentication System
# Set to 'true' to require user authentication for all operations
AUTHENTICATION_ENABLED=false

# =============================================================================
# SECRET MANAGEMENT CONFIGURATION
# =============================================================================

# Use Docker Secrets (for containerized production deployments)
USE_DOCKER_SECRETS=false

# Environment Variable Prefix for Secrets
SECRET_ENV_PREFIX=DEVSIM_

# File-based Secret Storage Directory (if not using Docker secrets)
SECRETS_STORAGE_DIR=./data/secrets

# Encryption Key Storage Directory
ENCRYPTION_KEY_STORAGE_PATH=./data/keys

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Flask Environment Mode
# Options: development, production, testing
FLASK_ENV=development

# Maximum Upload File Size (in bytes)
# Default: 10MB = 10485760 bytes
MAX_CONTENT_LENGTH=10485760

# Upload Directory Path
# Leave empty to use default: backend/app/uploads
UPLOAD_FOLDER=

# Allow Sensitive Connections (DEVELOPMENT ONLY)
# Set to 'false' in production for security
ALLOW_SENSITIVE_CONNECTIONS=true

# =============================================================================
# PRODUCTION DEPLOYMENT SETTINGS
# =============================================================================

# Database Connection Pool Settings (for production databases)
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10
# DATABASE_POOL_TIMEOUT=30

# Redis Configuration (if using Redis for caching/sessions)
# REDIS_URL=redis://localhost:6379/0

# Email Configuration (for password reset functionality)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your_email@domain.com
# MAIL_PASSWORD=your_app_password

# Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE=./logs/devsim.log

# =============================================================================
# SECURITY HEADERS AND CORS (Production)
# =============================================================================

# CORS Configuration
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Headers
# FORCE_HTTPS=true
# HSTS_MAX_AGE=31536000

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================

# Health Check Configuration
# HEALTH_CHECK_ENABLED=true
# HEALTH_CHECK_PATH=/api/health

# Metrics Collection
# METRICS_ENABLED=false
# METRICS_PATH=/api/metrics

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Mode (NEVER enable in production)
# FLASK_DEBUG=false

# Development Database (for local development)
# DEV_DATABASE_URL=sqlite:///dev_devsim.db

# Test Database (for running tests)
# TEST_DATABASE_URL=sqlite:///test_devsim.db