# Encriptación de la información
# Security Configuration
# Encryption key for secure credential storage (base64 encoded Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_base64_encryption_key_here
ENCRYPTION_KEY_VERSION=1

# Legacy encryption support (for backward compatibility)
ALLOW_SENSITIVE_CONNECTIONS=true  # true for dev environment

# Configuración de Flask
# Flask Configuration
SECRET_KEY=your_secret_key
FLASK_ENV=development  # Set to 'production' in production

# Configuración de Base de Datos
# Database Configuration
DATABASE_URL=sqlite:///your_data_base.db

# Configuración de Uploads
# Upload Configuration
MAX_CONTENT_LENGTH=10485760  # 10MB en bytes
# Ruta por defecto relativa al backend/app/uploads
UPLOAD_FOLDER=

# Authentication Configuration (if using authentication system)
JWT_SECRET_KEY=your_jwt_secret_key_here
AUTHENTICATION_ENABLED=false  # Set to true to enable authentication